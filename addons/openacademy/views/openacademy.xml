<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!--添加右上角的搜索栏-->
        <record model="ir.ui.view" id="course_search_view">
            <field name="name">搜索</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                </search>
            </field>
        </record>

        <record model="ir.ui.view" id="course_form_view">
            <field name="name">course.form</field>
            <field name="model">openacademy.course</field>
            <field name="arch" type="xml">
                <form string="Course Form">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <!--<field name="description"/>-->
                        </group>
                        <notebook> <!--把 描述 和 关于 都放到一个notebook里面-->
                            <page string="描述">
                                <field name="description"/>
                            </page>
                            <page string="关于">
                                This is a example of notebooks
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>



        <!-- window action -->
        <!--操作和菜单-->
        <!--
            The following tag is an action definition for a "window action",
            that is an action opening a view or a set of views
        -->
        <record id = "course_list_action"  model="ir.actions.act_window">
            <field name="name" >科目</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">创建一个科目吧！</p>
            </field>
        </record>

        <!-- top level menu: no parent 左上角显示应用的名称-->
        <menuitem id="main_openacademy_menu" name="Open Academy"/>
        <!-- A first level in the left side menu is needed
             before using action= attribute SlideMenu的父item-->
        <menuitem id="openacademy_menu" name="Open Academy" parent="main_openacademy_menu"/>
        <!-- the following menuitem should appear *after*
             its parent openacademy_menu and *after* its
             action course_list_action -->
        <!---->
        <menuitem id="course_menu1" name="Course一" parent="openacademy_menu" action="course_list_action"/>
        <menuitem id="course_menu2" name="Course二" parent="openacademy_menu" action="course_list_action"/>
        <!-- Full id location:action="openacademy.course_list_action" It is not required when it is the same module -->
    </data>
</openerp>